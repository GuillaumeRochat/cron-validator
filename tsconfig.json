{
  "compilerOptions": {
    "pretty": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "outDir": "./lib",
    "declaration": true,
    "noEmit": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "*.ts"
  ]
}
